-- Script untuk menampilkan teks di layar Roblox

-- Membuat ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PersistentTextGui"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Membuat TextLabel
local textLabel = Instance.new("TextLabel")
textLabel.Parent = screenGui
textLabel.Size = UDim2.new(1, 0, 0.2, 0) -- Ukuran (lebar penuh, tinggi 20%)
textLabel.Position = UDim2.new(0, 0, 0.4, 0) -- Posisi di tengah layar
textLabel.BackgroundTransparency = 1 -- Transparan
textLabel.TextColor3 = Color3.new(1, 1, 1) -- Warna teks (putih)
textLabel.TextScaled = true -- Teks otomatis menyesuaikan Our Blade Ball Is DiscontinuedðŸ˜”, Thanks for linkvertise anywaysðŸ˜ƒ(Join our discord!) 
textLabel.Font = Enum.Font.SourceSansBold -- Font teks
textLabel.Text = ""

-- Pastikan teks tetap tampil
while true do
    wait() -- Loop terus-menerus agar GUI tetap ada (meskipun sebenarnya tidak perlu karena GUI sudah permanen)
end
